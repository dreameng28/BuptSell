<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/input"
    android:padding="12dp" >
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/comment_top_content"
	        android:orientation="horizontal">
	        <ImageView 
	            android:id="@+id/comment_user_icon"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:src="@drawable/icon_girl"/>
	        <LinearLayout 
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:orientation="vertical"
		        android:background="#FFFFFF">
		    	<TextView 
			        android:id="@+id/comment_user_name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textColor="#FF83FA"
			        android:textSize="16sp"
			        android:text="用户名"/>
		    
			    <TextView 
			        android:id="@+id/comment_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2dp"
			        android:textColor="#2F2F4F"
			        android:textSize="12sp"
			        android:text="2015.4.29"/>    
	    	</LinearLayout>
	    	<TextView 
	    	    android:id="@+id/comment_floor_num"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center_vertical"
	    	    android:text="1楼"/>
	    </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/comment_content"
	        android:layout_below="@id/comment_top_content"
	        android:layout_marginTop="6dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="17sp"
	        android:text="评论内容"/>
	    

</LinearLayout>
