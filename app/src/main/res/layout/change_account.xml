<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/display_title"
    	    android:id="@+id/change_account_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView 
	        android:id="@+id/info_user_icon"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/icon_girl"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
       	android:layout_marginTop="10dp" >
        <TextView 
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="用户昵称:"/>
        <TextView 
	        android:id="@+id/info_user_nickname"
	        android:layout_marginLeft="15dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="用户昵称"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
       	android:layout_marginTop="20dp" >
        <TextView 
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="性别:"/>
        <TextView 
	        android:id="@+id/info_user_gender"
	        android:layout_marginLeft="15dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="性别"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
       	android:layout_marginTop="20dp" >
        <TextView 
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="邮箱地址:"/>
        <TextView 
	        android:id="@+id/info_bind_email"
	        android:layout_marginLeft="15dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#333333"
	        android:textSize="19sp"
	        android:text="邮箱地址"/>
    </LinearLayout>
   
   	 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
       	android:layout_marginTop="20dp" >
       
        <TextView 
	      	android:id="@+id/info_change_password"
	        android:layout_marginLeft="10dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="19sp"
	        android:background="#FF0000"
	        android:text="修改密码"
	        android:textColor="#FFFFFF"/>
    </LinearLayout> 
     
</LinearLayout>
